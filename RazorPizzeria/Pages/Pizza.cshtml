@page
@model RazorPizzeria.Pages.PizzaModel
@{
}


<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our Great Selection of Pizza</h1>
        <h4>Choose one, or try our Pizza Builder! Then Order and Done!</h4>
        <h4>No need to give away any of your details!</h4>
        <h4>We already know everything!</h4>
        <p class="smallText"><i>*Only one pizza per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img class="w-100" src="~/images/Pizzas/Create.png" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza!</h3>
                            <p style="text-align:left;">Make your own pizza with our pizza builder!</p>
                            <a class="btn btn-primary" style="float:left;" asp-area="" asp-page="Forms/CustomPizza/">Try Now!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-4 w-33 p-0 m-0">
                <img class="w-100" src="~/images/Pizzas/Bolognese.png" />
            </div>
            <div class="col-4 w-33 p-0">
                <img class="w-100" src="~/images/Pizzas/Margerita.png" />
            </div>
            <div class="col-4 w-33 p-0">
                <img class="w-100" src="~/images/Pizzas/Hawaiian.png" />
            </div>
        </div>
        <div class="row">
            <div class="col-4 w-33 p-0 m-0">
                <img class="w-100" src="~/images/Pizzas/MeatFeast.png" />
            </div>
            <div class="col-4 w-33 p-0">
                <img class="w-100" src="~/images/Pizzas/Mushroom.png" />
            </div>
            <div class="col-4 w-33 p-0">
                <img class="w-100" src="~/images/Pizzas/Pepperoni.png" />
            </div>
        </div>
        <div class="row">
            <div class="col-6 w-50 p-0 m-0">
                <img class="w-100" src="~/images/Pizzas/Seafood.png" />
            </div>
            <div class="col-6 w-50 p-0">
                <img class="w-100" src="~/images/Pizzas/Vegetarian.png" />
            </div>
        </div>





    </div>

</div>

